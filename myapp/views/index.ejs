<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
	<%- include("./partials/head") %>
<body>
	<!-- Header -->
	<% if (locals.usuarioLogueado != undefined) { %>
		<%- include("./partials/headerLogueado") %>
	<% } else { %>
		<%- include("./partials/header_deslogueado") %>
	<% } %>
	<!-- /Header -->
	
	<!-- Banner -->
	<div class="banner">
		<img src="images/IMG-inicio.jpg" alt="Banner de ofertas">
	</div>
	<!-- /Banner -->3

	<!-- Novedades -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Novedades</h2>
			</div>
			<!-- Show the "ultimos" products -->
			<% for( let index = 0; index < 4; index++ ) { %>
				<div class="col-12 col-sm-6 col-lg-3">
					<section class="product-box">
						<a href="/producto/detalle/<%= productos[index].id %>" >
							<figure class="product-box_image">
								<img src="<%= productos[index].foto %>"> 
							</figure>
							<article class="product-box_data">
								<h2><%= productos[index].nombre %></h2>
								<p><%= productos[index].descripcion %></p>
								<p> Comentarios: <%= productos[index].comentarios.length %></p> 
								<p>Usuario que cargo el producto: <a href="/users/profile/<%= productos[index].idUsuario %>"><%= productos[index].usuario.email%></a></p>
							</article>
						</a>
					</section>
				</div>
			<% } %>
		</div>
	</div>
	<!-- /Novedades -->

	<!-- Más comentados -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Más comentados</h2>
			</div>
			<!-- Show the "ultimos" products -->
			<% for( let index = 4; index < 8; index++ ) { %>
				<div class="col-12 col-sm-6 col-lg-3">
					<section class="product-box">
						<a href="/producto/detalle/<%= productos[index].id %>">
							<figure class="product-box_image">
								<img src="<%= productos[index].foto %>">
							</figure>
							<article class="product-box_data">
								<h2><%= productos[index].nombre %></h2>
								<p><%= productos[index].descripcion %></p>
								<p>Comentarios: <%= productos[index].comentarios.length %></a></p> 
								<p>Usuario que cargo el producto: <a href="/users/profile/<%= productos[index].idUsuario %>"><%= productos[index].usuario.email %></a></p> 
							</article>
						</a>
					</section>
				</div>
			<% } %>
		</div>
	</div>
	<!-- /Más comentados -->

	<!-- footer -->
		<%- include("./partials/footer") %>
	<!-- /footer -->
</body>	
</html>