<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
	<%- include("./partials/head") %>
<body>
	<!-- Header -->
	<%- include("./partials/headerLogueado") %>
	<!-- /Header -->

	<!-- Datos del usuario -->
	<section class="info-usuario container products-wrapper">
		<div class="row">
			<div class="img-container offset-3 col-2">
				<img src="/images/foto-perfil.webp" alt="foto de perfil" class="foto-perfil">
			</div>
			<div class="data-container col-6">
					<div class="d-flex align-items-center ">
						<h1 class="main-title"> Maria Gomez
							<a href="/users">
								<i class="fas fa-cog"></i>
							</a>
						</h1>
					</div>
				<div>
					<ul class="">
						<div>
							<li>mariagomez@gmail.com</li>
						</div>
						
						<li>12 productos</li>
						<li>200 seguidores</li>
						<li>300 comentarios</li>
					</ul>
				</div>
			</div>
		</div>
	</section>
	<!-- /Datos del usuario -->

	<!-- Mis productos -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Mis productos</h2>
			</div>
			<!-- Show mis productos -->
			<% for( let index = 0; index <= 11; index++ ) { %>
				<div class="col-12 col-sm-6 col-lg-3">
					<section class="product-box">
						<a href="/producto/product">
							<figure class="product-box_image">
								<img src="<%= productos[index].foto %>">
							</figure>
							<article class="product-box_data">
								<h2><%= productos[index].nombre %></h2>
								<p><%= productos[index].descripcion %></p>
								<p> <%= productos.comentarios %> </p>
							</article>
						</a>
					</section>
				</div>
			<% } %>
		</div>
	</div>
	<!-- /Mis productos -->


	<!-- footer -->
	<%- include("./partials/footer") %>
	<!-- /footer -->
</body>	
</html>