<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
	<%- include("./partials/head") %>
<body>
	<!-- Header -->
	<%- include("./partials/header_deslogueado") %>
	<!-- /Header -->

	<!-- Novedades -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Resultados de b√∫squeda</h2>
			</div>

			<!-- Show the "ultimos" products -->
			<h2 class="col-12"> 
				<% for( let index = 0; index < 11; index++ ) { %>
						<div class="col-12 col-sm-6 col-lg-3">
							<section class="product-box">
								<a href="/producto/product">
									<figure class="product-box_image">
										<img src="<%= productos[index].foto %>">
									</figure>
									<article class="product-box_data">
										<h2><%= productos[index].nombre %></h2>
										<p><%= productos[index].descripcion %></p>
									</article>
								</a>
							</section>
						</div>					 
				<% } %>
			</h2>

	<!-- footer -->
	<%- include("./partials/footer") %>
	<!-- /footer -->
</body>

</html>