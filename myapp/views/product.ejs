<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include("./partials/head") %>

	<body>
		<!-- Header -->
		<% if (locals.usuarioLogueado != undefined) { %>
			<%- include("./partials/headerLogueado") %>
		<% } else { %>
			<%- include("./partials/header_deslogueado") %>
		<% } %>
		<!-- /Header -->

		<!-- product detail -->
		<!-- hacer un unico for -->
		<div class="container products-wrapper">

			<div class="d-flex align-items-center">
				<h2 class="products-title">
					<%= productos.nombre %>
				</h2>

				<% console.log(productos)
				console.log(usuarioLogueado) %>
			
				<%if (locals.usuarioLogueado.id == productos.idUsuario ) { %>

					<p class="product-detail-description">
						<a href="/producto/product_add">Editar</a>
					</p>

					<p class="product-detail-description"> 
						<a href="/">Borrar</a>
					</p>
				<% } %>
			</div>


			<div class="product-detail">
				<div class="row">

					<article class="col-12 col-lg-8 product-detail-info">
						<img src="<%= productos.foto %>" alt="" class="product-detail-img">
						<p class="product-detail-description">
							<%= productos.descripcion %>
						</p>
					</article>
				</div>
				<div class="col-12 col-lg-4">
					<section class="comments">
						<% for( let index=0; index < 4; index++ ) { %>
							<article>
								<img src="<%= productos.comentarios.foto_de_perfil %>" alt="">
								<div class="data">
									<p class="user">
										<strong>
											<a href="/users/profile">
												<%= productos.comentarios.nombre_de_usuario %>
											</a>
										</strong>
										<%= productos.comentarios.texto %>
									</p>
								</div>
							</article>
						<% } %>
					</section>
				</div>
			
				<form class="form" action="/producto/product" method="POST">
					<input class="form-input" type="text" value="" placeholder="Agregar comentario">
					<button type="submit" class="buy-now-button">AGREGAR COMENTARIO</button>
				</form>
			</div>
		</div>
				<!-- /product detail -->

		<!-- footer -->
		<%- include("./partials/footer") %>
		<!-- /footer -->

	</body>

</html>