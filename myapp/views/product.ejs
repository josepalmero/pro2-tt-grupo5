<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
	<%- include("./partials/head") %>
<body>
	<!-- Header -->
	<% if (locals.usuarioLogueado != undefined) { %>
		<%- include("./partials/headerLoguado") %>
	<% } else {%>
		<%- include("./partials/header_deslogueado") %>
	<% } %>
	<!-- /Header -->

	<!-- product detail -->
	<div class="container products-wrapper">
		<% for( let index = 0; index < 1; index++ ) { %>
			<div class="d-flex align-items-center">
				<h2 class="products-title"><%= productos[index].nombre %></h2> 
				<p class="product-detail-description">
					<a href="/producto/product_add">Editar</a>
				</p>
			</div>
		<% } %>
		
		<div class="product-detail">
			<div class="row">
				<% for( let index = 0; index < 1; index++ ) { %>
					<article class="col-12 col-lg-8 product-detail-info">
						<img src="<%= productos[index].foto %>" alt="" class="product-detail-img">
						<p class="product-detail-description">
							<%= productos[index].descripcion %>
						</p>
					</article>
				<% } %>
			
			
				<div class="col-12 col-lg-4">
					<section class="comments">
						<% for( let index = 0; index < 4; index++ ) { %>
							<article>
								<img src="<%= productos[index].comentarios[index].foto_de_perfil %>" alt="">
								<div class="data">
									<p class="user">
										<strong> 
											<a href="/users/profile"> 
												<%= productos[index].comentarios[index].nombre_de_usuario %>
											</a>  
											
										</strong>
										<%= productos[index].comentarios[index].texto %>
									</p>
								</div>
							</article>
						<% } %>
							
					</section>
					<form class="form" action="/producto/product" method="POST"> 
						<input class="form-input" type="text" value="" placeholder="Agregar comentario">
						<button type="submit" class="buy-now-button">AGREGAR COMENTARIO</button>
					</form>
					<hr>
				</div>
			</div>
		</div>
	</div>
	<!-- /product detail -->

	<!-- footer -->
	<%- include("./partials/footer") %>
	<!-- /footer -->

</body>	
</html>